        <h1>Modification de l'article</h1>
   <hr>

            <div class="row">
            <div class="col-md-8">

        {{ form_start(edit_form) }}
        
        {{ form_label(edit_form.title,'Titre :') }}
        {{ form_errors(edit_form.title) }}
        {{ form_widget(edit_form.title) }}
            <br>
            </div>
            </div>
            <div class="row">
            <div class="col-md-8">
        {{ form_label(edit_form.content,'Texte :') }}
        {{ form_errors(edit_form.content) }}
        {{ form_widget(edit_form.content) }}
            <br>
            </div>
            </div>
            <div class="row">
            <div class="col-md-8">
        {{ form_label(edit_form.createdAt, 'Date de publication :') }}
